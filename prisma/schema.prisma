generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CalendarSyncState {
  id           String   @id @default(uuid())
  userId       String   @unique
  lastSyncedAt DateTime
  syncToken    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

model OAuthToken {
  id           String   @id @default(uuid())
  userId       String   @unique
  accessToken  String
  refreshToken String?
  tokenType    String
  scope        String?
  expiresAt    DateTime
  idToken      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}
